<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mb-3">Create New Contact</h2>
      <% include ./partials/messages %>
      <form action="/contacts/newcontact" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input
            type="name"
            maxlength="50"
            pattern="[^']*$"
            id="name"
            title="Name should not contain a single quote"
            name="name"
            class="form-control"
            placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="email">Email (ex. jsmith@example.com)</label>
          <input
            type="text"
            maxlength="50"
            pattern="^[^@\s]+@[^@\s]+\.[^@\s]+$"
            title="Email address should match this format: jsmith@example.com"
            id="email"
            name="email"
            class="form-control"          
            placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group">
          <label for="phone">Phone Number (ex. 6135551234)</label>
          <input
            type="tel"
            maxlength="10"
            pattern="[0-9]{10}"
            title="Phone number should be 10 numbers without spaces or hyphens"
            min="10"
            max = "10"
            id="phone"
            name="phone"
            class="form-control"
            placeholder="Enter Phone Number"
            value="<%= typeof phone != 'undefined' ? phone : '' %>"
          />
        </div>&nbsp;
          <div>
        <button style="width:150px" type="submit" class="btn btn-primary">New</button>&nbsp;
        <button style="width:150px" type="button" onclick="location.href='/contacts'" class="btn btn-primary">Cancel</button>
        </div>     
      </form>
    </div>
  </div>
</div>
